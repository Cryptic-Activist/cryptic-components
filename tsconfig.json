{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "declaration": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "incremental": true,
    "outDir": "./dist"
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
