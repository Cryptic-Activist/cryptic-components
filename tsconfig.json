{
	"compilerOptions": {
		"lib": ["DOM", "ES2022", "DOM.Iterable"],
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"skipLibCheck": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noEmit": true,
		"moduleDetection": "force",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [".eslintrc.cjs", "src/**/*.ts", "src/*.ts"]
}
